<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp" >

    <RelativeLayout
        android:id="@+id/rl_nav_home"
        style="@style/navigationbar_style"
        android:layout_width="0dp"
        android:layout_height="@dimen/navigation_height"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="@dimen/navigation_icon_height"
            android:layout_height="@dimen/navigation_icon_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/nav_home" />

        <TextView
            style="@style/navigationbar_lable_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_home"
            android:layout_centerHorizontal="true"
            android:text="@string/navigationvar_home" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_nav_runnow"
        style="@style/navigationbar_style"
        android:layout_width="0dp"
        android:layout_height="@dimen/navigation_height"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/iv_runnow"
            android:layout_width="@dimen/navigation_icon_height"
            android:layout_height="@dimen/navigation_icon_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/nav_runnow" />

        <TextView
            style="@style/navigationbar_lable_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_runnow"
            android:layout_centerHorizontal="true"
            android:text="@string/navigationvar_runnow" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_nav_stats"
        style="@style/navigationbar_style"
        android:layout_width="0dp"
        android:layout_height="@dimen/navigation_height"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/iv_stats"
            android:layout_width="@dimen/navigation_icon_height"
            android:layout_height="@dimen/navigation_icon_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/nav_stats" />

        <TextView
            style="@style/navigationbar_lable_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_stats"
            android:layout_centerHorizontal="true"
            android:text="@string/navigationvar_stats" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_nav_settings"
        style="@style/navigationbar_style"
        android:layout_width="0dp"
        android:layout_height="@dimen/navigation_height"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="@dimen/navigation_icon_height"
            android:layout_height="@dimen/navigation_icon_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/nav_settings" />

        <TextView
            style="@style/navigationbar_lable_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_settings"
            android:layout_centerHorizontal="true"
            android:text="@string/navigationvar_settings" />
    </RelativeLayout>

</LinearLayout>