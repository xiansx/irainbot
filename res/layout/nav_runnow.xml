<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pagebg"
    android:padding="0dp" >

    <RelativeLayout
        android:id="@+id/rl_total_time"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <ProgressBar
            android:id="@+id/pb_total_time"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progressbar_style_color"
            android:secondaryProgress="100" />

        <TextView
            android:id="@+id/tv_time_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Finished 12 min / Total 25 min" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_zone_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_total_time"
        android:background="@color/pagebg"
        android:divider="@android:color/transparent"
        android:listSelector="#00000000"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>