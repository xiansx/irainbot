<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@color/actionbar_bg"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/actionbar_logo_height"
        android:layout_height="@dimen/actionbar_logo_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="backClick"
        android:src="@drawable/back" />
    
    <ImageView
        android:id="@+id/iv_Menu"
        android:layout_width="@dimen/actionbar_logo_height"
        android:layout_height="@dimen/actionbar_logo_height"
        android:layout_marginLeft="@dimen/common_margin_small"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="menuClick"
        android:src="@drawable/logo"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/actionbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="0dp" />

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="@dimen/actionbar_btn_height"
        android:layout_height="@dimen/actionbar_btn_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/common_margin_normal"
        android:layout_centerVertical="true"
        android:src="@drawable/save"
        android:padding="0dp"
        android:visibility="invisible" />

</RelativeLayout>