<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 按钮样式（黑色字,白色按钮） -->
    <style name="btn_text_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/common_font_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btnbg_white</item>
        <item name="android:padding">@dimen/common_padding_normal</item>
    </style>

    <!--
    按钮样式（白色,蓝色按钮）
    <style name="btn_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/common_font_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btnbg_blue</item>
        <item name="android:padding">@dimen/common_padding_normal</item>
    </style>
    -->
    <!-- 标注样式 -->
    <style name="lable_text_color">
        <item name="android:textColor">@color/lable_color</item>
        <item name="android:textSize">@dimen/common_font_small</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 小标题样式 -->
    <style name="title_text_color">
        <item name="android:textColor">@color/lable_color</item>
        <item name="android:textSize">@dimen/common_font_medium</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- 输入框 样式 -->
    <style name="edittext_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/common_font_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/common_padding_small</item>
        <item name="android:minWidth">@dimen/edittext_height</item>
        <item name="android:background">@drawable/edittextbg</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 下拉列表样式 -->
    <style name="droplist_text_color" parent="edittext_style">
        <item name="android:drawableRight">@drawable/dropdown</item>
        <item name="android:padding">@dimen/common_padding_medium</item>
        <item name="android:drawablePadding">@dimen/common_padding_small</item>
    </style>

    <!-- listview item 样式 -->
    <style name="listview_item">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/common_font_medium</item>
        <item name="android:paddingLeft">@dimen/common_padding_medium</item>
        <item name="android:paddingRight">@dimen/common_padding_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- listview item 标签样式 -->
    <style name="listview_item_lable">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/common_font_medium</item>
        <item name="android:background">@color/list_item_lable_color</item>
        <item name="android:paddingLeft">@dimen/common_padding_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- setting item 样式 -->
    <style name="setting_item">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/common_font_medium</item>
        <item name="android:paddingLeft">@dimen/common_padding_medium</item>
        <item name="android:paddingRight">@dimen/common_padding_medium</item>
        <item name="android:drawablePadding">@dimen/common_padding_normal</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="setting_item_lable" parent="@style/setting_item">
        <item name="android:paddingRight">0dp</item>
    </style>

    <!-- actionbar title 样式 -->
    <style name="actionbar_title">
        <item name="android:shadowColor">#1c4166</item>
        <item name="android:shadowDx">-1.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/common_font_large</item>
    </style>

    <!-- navigationbar 样式 -->
    <style name="navigationbar_style">
        <item name="android:background">@drawable/navigation_btn</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="navigationbar_lable_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/common_font_micro</item>
    </style>

    <!-- plan item 样式 -->
    <style name="plan_item_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/common_font_micro</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
   <!-- program cover months 样式 -->
       <style name="program_months_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>